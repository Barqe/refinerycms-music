<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search", :locals => {:url => admin_songs_url} %>
    </li>
    <li>
      <%= link_to "Create New Music", new_admin_song_url, :class => "add_icon" %>
    </li>
    <li>
      <%= link_to "Edit music settings", admin_music_settings_url, :class => "edit_icon" %>
    </li>
    
  <% if !searching? and Song.count > 1 %>
    <li>
      <%= link_to "Reorder Songs", "", :id => "reorder_action", :class => "reorder_icon" %>
      <%= link_to "Done Reordering Songs", "", :id => "reorder_action_done", :style => "display: none;", :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<div id='records'>
  <% if searching? %>
    <h2>Search Results for "<%= params[:search] %>"</h2>
    <% if @songs.size > 0 %>
      <%= render :partial => "song", :collection => @songs %>
    <% else %>
      <p>Sorry, no results found.</p>
    <% end %>
  <% else %>
    <% if @songs.size > 0 %>
      <%= will_paginate @songs, :previous_label => '&laquo;', :next_label => '&raquo;' %>
       <ul id='sortable_list'>
        <%= render :partial => "sortable_list" %>
       </ul>
      <%= will_paginate @songs, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% else %>
      <p>
        <strong>
          There are no song yet.
          Click "Add a New Song" to add your first song.
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
<%= render :partial => "/shared/admin/make_sortable", :locals => {:tree => false } if !searching? and Song.count > 1 %>
